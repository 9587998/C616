<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@mipmap/bar"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/bar_ggl"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#ff0000"/>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:id="@+id/framelayout">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/xdd"
                    />


            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#ff0000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@mipmap/ic_tuijian"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_tuijian1"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#ee00ee"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#ffffff"
            android:columnCount="4"
            android:rowCount="1"
            >

            <LinearLayout
                android:id="@+id/ll_module1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#e6e6fa"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@mipmap/ic_dedao"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="得到app"
                    android:textColor="#929292"
                    android:textSize="13sp"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_module2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#f0fff0"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="61dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@mipmap/ic_ff" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="宠物领养"
                    android:textColor="#929292"
                    android:textSize="13sp"
                    />


            </LinearLayout>
            <LinearLayout
            android:id="@+id/ll_module3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
                android:background="#bfefff"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@mipmap/ic_dianhuabu"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="电话簿"
                android:textColor="#929292"
                android:textSize="13sp"
                />


        </LinearLayout>
            <LinearLayout
            android:id="@+id/ll_module4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
                android:background="#fff0f5"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@mipmap/ic_jiyiben"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="集意本"
                android:textColor="#929292"
                android:textSize="13sp"
                />


        </LinearLayout>

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#ee00ee"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@mipmap/bar_xw"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="4dp"
                android:src="@mipmap/bar_xwl" />

        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#4876ff" />

        <LinearLayout
            android:id="@+id/recommand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="none">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="本周大事件：狗年即将到来~"
                android:textColor="#929292"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="300dp"
                    android:src="@drawable/dog_666"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="300dp"
                    android:src="@drawable/dog_22"
                    />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#4876ff"/>

    </LinearLayout>

</ScrollView>
