<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home2"
    android:orientation="vertical"
    tools:context="com.algg.c616.activity.HelpActivity">
    <include layout="@layout/activity_top1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/background">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:src="@drawable/help_logo"
            />

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:columnCount="2"
        android:rowCount="2">
        >
        <LinearLayout
            android:id="@+id/ll_module111121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/help_1"
            android:orientation="vertical"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:text="版本信息："
                android:layout_margin="10dp"
            android:textColor="#929292"
            android:textSize="15sp"
                android:textStyle="bold"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="版  本  号：1.22.24"
                android:layout_marginLeft="10dp"
                android:textColor="#929292"
                android:textSize="13sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="更新时间：2017/12/24"
                android:textColor="#929292"
                android:textSize="13sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_module1111122111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/help_2"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="关于我们："
                android:layout_margin="10dp"
                android:textColor="#929292"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="组   名  ：Community616"
                android:layout_marginLeft="10dp"
                android:textColor="#929292"
                android:textSize="13sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="代码量 ：3236 行"
                android:textColor="#929292"
                android:textSize="13sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_module11111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/help_3"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="服务条款："
                android:layout_margin="10dp"
                android:textColor="#929292"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="一 ：HelloWorld"
                android:layout_marginLeft="10dp"
                android:textColor="#929292"
                android:textSize="13sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="二 ：测试版本，欢迎反馈"
                android:textColor="#929292"
                android:textSize="13sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_module11111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/help_4"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:text="作者寄语："
                android:layout_margin="10dp"
                android:textColor="#929292"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=" 赵旭老师最可爱"
                android:layout_marginLeft="10dp"
                android:textColor="#929292"
                android:textSize="13sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text=" 可爱可爱最可爱"
                android:textColor="#929292"
                android:textSize="13sp"
                />
        </LinearLayout>
    </GridLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="5dp" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="225dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="问题反馈"
            android:textSize="25dp"

            android:background="@drawable/background"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/add_content"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:enabled="true"
            android:inputType="textMultiLine"
            android:layout_margin="10dp"
            android:minLines="8"
            android:maxLines="8"
            android:scrollbars="vertical"
            android:background="#5555"
            >
        </EditText>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <Button
               android:id="@+id/gogogo"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_marginLeft="10dp"
               android:layout_height="wrap_content"
               android:text="提交"
               android:background="@drawable/help_2"
               />
            <Button
                android:id="@+id/nonono"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="10dp"
                android:text="重置"
                android:layout_height="wrap_content"
                android:background="@drawable/help_3"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:text=" ----@2017-Community616----"
            />
    </LinearLayout>

</ScrollView>

</LinearLayout>
