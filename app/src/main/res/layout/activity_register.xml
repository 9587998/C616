<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_unlogin"
    tools:context="com.algg.c616.activity.MainActivity">
    <EditText
        android:drawableLeft="@android:drawable/ic_menu_compass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:id="@+id/nickName"
        android:layout_alignParentTop="true"
        android:hint="请输入您的昵称"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="  * 昵称由中英文和数字组成，6~24字符"
        android:textColor="#ff3030"
        />
    <EditText
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:id="@+id/userName"
        android:layout_alignParentTop="true"
        android:hint="请输入用户名"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  * 用户名由数字和字母组成，6~16字符"
        android:textColor="#ff3030"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/passWord"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="text"
        android:hint="请输入您的密码"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="  * 密码由数字和字母组成，6~8字符"
        android:textColor="#ff3030"
        />


    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/passWord2"
        android:hint="请确认您的密码" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="  * 与输入的密码保持一致"
        android:textColor="#ff3030"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="确认注册"
        android:id="@+id/register"
        android:textSize="20dp"
        android:background="#1cf718"
        android:layout_below="@+id/resetpwd_edit_pwd_new"
        android:layout_alignLeft="@+id/resetpwd_edit_pwd_new"
        android:layout_alignStart="@+id/resetpwd_edit_pwd_new"
        android:layout_marginTop="20dp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/ret"
        android:textSize="20dp"
        android:background="#707070"
        android:layout_below="@+id/register_btn_sure"
        android:layout_alignLeft="@+id/register_btn_sure"
        android:layout_alignStart="@+id/register_btn_sure"
        android:layout_marginTop="10dp" />
</LinearLayout>
